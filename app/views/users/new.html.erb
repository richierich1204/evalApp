<% provide(:title, 'Create') %>
<div class="row">
  <h1>Create a New User Here</h1>
  <p>Don't worry...we don't validate.</p>
</div>
<div class = "row">
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.submit "Create User", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
